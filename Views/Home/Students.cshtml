<script type="text/javascript">

    $(document).ready(function () {

        var list = [];
        var companiesList = [];
        fill_data();

        $('.m-b-20').hide();

        // Retrieve all records
        function fill_data() {
            $('#export-button').DataTable().destroy();
            $.ajax({
                type: 'GET',
                url: 'https://localhost:44304/api/Students',
                beforeSend: function () {
                    // $('#errorMsg').html('');
                },
                dataType: 'JSON',
                success: function (data) {
            list = data.data;
            console.log(list);
            var rows = '';
            for (var i = 0; i < list.length; i++) {
                var item = list[i];
                var rowClass = 'odd';
                if (i % 2 == 0)
                    rowClass = 'even';
                rows += '<tr class="' + rowClass + '">' +
                    '<td>'+(i+1)+'</td>' +
                    '<td>' + item.name + '</td>' +
                    
                    '<td><button class="btn btn-info" data-indx=' + i + ' data-toggle="modal" data-target="#editModal"><i class="fa fa-edit"></i></button> ' +
                    '<button class="btn btn-danger" data-indx=' + i + '  data-indx=' + i + ' data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash"></i></button>' +
                    ' <button class="btn btn-primary" data-indx=' + i + '  data-indx=' + i + '><i class="fa fa-eye"></i></button>' +
                    '</td>' +
                    '</tr>';
            }
            $("#tableContent").html(rows);
             }, error: function (data) {
                console.log(data);
                }
            });
            $('#export-button').DataTable().draw();
            return false;
        }

        // submit new Record
        $('#addForm').on('submit', function (e) {
            e.preventDefault(e);
            //var formData = new FormData($('#addForm')[0]);
            var formData = {
                "name": $('#name').val(),
                "status" : "true",
                "CompanyId": $('#company').val(),
                "birthDate": $('#Birthdate').val()
            };
            $.ajax({
                type: "POST",
               // data: formData,
                contentType : 'application/json; charset=utf-8',
                url: "https://localhost:44304/api/Students",
                headers : {
                    RequestVerificationToken:$('input:hidden[name="__RequestVerificationToken"]').val()
                },
                data: JSON.stringify(formData),
                success: function (data) {
                    console.log(data);
                    // if(data.status == 'Cerated ...'){             
                    swal({
                        title: 'Done ',
                        text: "Successfuly Added ....",
                        type: 'success',
                        icon: "success",
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK'
                    });
                    $('#addModal').modal('hide');
                    fill_data();
                    // }
                }, error: function (data) {
                    console.log(data);
                    $('#addResponse').html(' <div class="alert alert-danger light" role="alert">' +
                        'Failed' +
                        '</div>');

                }
            });
            

        });

        // Retrieve all records
        function fill_company() {
            $('#export-button').DataTable().destroy();
            $.ajax({
                type: 'GET',
                processData: false,
                contentType: false,
                dataType: 'json',
                url: 'https://localhost:44304/api/Companies',
                beforeSend: function () {
                   // $('#addResponse').html('');
                },
                dataType: 'JSON',
                success: function (data) {
                    var options = '';
                    if (data != null && data.data.length > 0) {
                        companiesList = data.data;
                        console.log(companiesList);
                      ///  options += '<option value="">' + '-- Select One --' + '</option>';
                        for (var i = 0; i < companiesList.length; i++) {
                            options += '<option value="' + companiesList[i].id + '">' + companiesList[i].name + '</option>';
                        }
                        $('#edit_company').html(options);
                        $('#company').html(options);
                    }

                }, error: function (data) {
                    console.log(data);
                }
            });
             
            return false;
        }

       
        // edit Record
        $('#editModal').on('show.bs.modal', function (event) {
            // alert('Hii');
            var recordIndex = $(event.relatedTarget).attr('data-indx');
            var recordData = list[recordIndex];
            console.log(recordData);
            fill_company();
            $('#edit_record_id').val(recordData.id);
            $('#edit_name').val(recordData.name);
            $('#edit_Birthdate').val(recordData.birthDate);
        
            $('#edit_company').val(recordData.company.id);
            $('#edit_status').val(""+recordData.status);
        });

        // Add Record
        $('#addModal').on('show.bs.modal', function (event) {
        
            fill_company();
         
        });

        // submit edit record
        $('#editForm').on('submit', function (e) {
        e.preventDefault(e);
            var formData = {
                "id": $('#edit_record_id').val(),
                "name": $('#edit_name').val(),
                "status": $('#edit_status').val(),
                "CompanyId": $('#edit_company').val(),
                "birthDate": $('#edit_Birthdate').val()
            };
            

        $.ajax({
            type: 'Put',
            processData: false,
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            headers: {
                RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
            },
            data: JSON.stringify(formData),
            url: "https://localhost:44304/api/Students",
            beforeSend: function () {
                $('#editResponse').html('');
            },
            dataType: 'JSON',
            success: function (data) {
                // if(data.status == 'Cerated ...'){
                swal({
                    title: 'Done',
                    text: "Successed updated",
                    type: 'success',
                    icon: "success",
                    confirmButtonText: 'OK'
                });
                $('#editModal').modal('hide');
                fill_data();
                // }
            }, error: function (data) {
                var code = data.status;
                if (code == 500) {
                    $('#editResponse').html(' <div class="alert alert-danger light" role="alert">' +
                        'Failed' +
                        '</div>');
                } else if (code == 400) {
                    $('#editResponse').html(' <div class="alert alert-danger light" role="alert">' +
                        'Required Fields' +
                        '</div>');
                } else {

                }
            }
        });
        return false;
        });

        // delete Record
        $('#deleteModal').on('show.bs.modal', function (event) {
            var recordIndex = $(event.relatedTarget).attr('data-indx');
            var recordData = list[recordIndex];
            $('#delete_record_id').val(recordData.id);
            $('#delete_name').val(recordData.name);
        });

        // submit delete record
        $('#deleteForm').on('submit', function (e) {
            e.preventDefault(e);
            swal({
                title: "Are You Sure ?",
                text: " ",
                type: "error",
                icon: "warning",
                confirmButtonClass: "btn-danger",               
                confirmButtonText: "OK",
                cancelButtonText: "Cancel",
                showCancelButton: true
            }).then((willDelete) => {
                var id = $('#delete_record_id').val();
                $.ajax({
                    type: 'Delete',
                    processData: false,
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    headers: {
                        RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    url:"https://localhost:44304/api/Students/"+id,
                    beforeSend: function () {
                        $('#deleteResponse').html('');
                    },
                    success: function (data) {
                        console.log(data);
                        // if(data.status == 'Cerated ...'){
                        swal({
                            title: 'Done',
                            text: "Successfuly deleted",
                            type: 'success',
                            icon: "success",
                            confirmButtonText: 'OK'
                        });
                        $('#deleteModal').modal('hide');
                        fill_data();
                        // }
                    }, error: function (data) {
                        var code = data.status;
                        if (code == 500){
                            $('#deleteResponse').html(' <div class="alert alert-danger light" role="alert">' +
                                ' ' +
                                '</div>');
                        }else if (code == 400) {
                            $('#deleteResponse').html(' <div class="alert alert-danger light" role="alert">' +
                                'Required Fields' +
                                '</div>');
                        }else{

