<script type="text/javascript">

    $(document).ready(function () {
        var list = [];
        var departmentsList = [];
        var nodes = [];
        var editNodes = [];
        fill_data();


        // Retrieve all records
        function fill_data() {
            //$('#treeBasic').jstree().destroy();

            // tree_custom.destroy();
            $.ajax({
                type: 'GET',
                url: 'https://localhost:44304/api/Departments',
                dataType: 'JSON',
                success: function (data) {
                    list = data.data;
                    console.log(list);
                    var rows = '';
                    for (var i = 0; i < list.length; i++) {
                        var item = list[i];

                        //    rows += "<li data-jstree='{ 'opened': true } '>" + item.name;
                        var sub_menu = traceTree(item);
                        rows += sub_menu;
                        //    rows += "</li >";

                    }
                    ///console.log(rows);

                    $("#treeContent").html(rows);

                }, complete: function () {

                    //$('#treeBasic').jstree(true).refresh();

                    $("<script src='https://localhost:44304/assets/js/tree/jstree.min.js'>" + "<\/script>").appendTo('#treeJS');
                    $("<script src='https://localhost:44304/assets/js/tree/tree.js'>" + "<\/script>").appendTo('#treeJS');


                }

                , error: function (data) {
                    console.log(data);
                }
            });
            ////$('#export-button').DataTable().draw();
            return false;
        }

        var sub_menu = "";
        var traceTree = function (item) {
            console.log('********');
            sub_menu += "<li data-indx='" + item.id + "' data-jstree='{'type':'file'}'>" + item.name;


            if (item.subDepartments != null && item.subDepartments.length) {

                sub_menu += "<ul>";
                for (var i = 0; i < item.subDepartments.length; i++) {

                    traceTree(item.subDepartments[i]);

                }
                sub_menu += "</ul>";
            }
            sub_menu += "<i class='jstree-icon jstree-themeicon fa fa-trash font-theme jstree-themeicon-custom text-danger'> </i>" +
                " <i class='text-info jstree-icon jstree-themeicon fa fa-edit font-theme jstree-themeicon-custom'> </i >";
            sub_menu += "</li>";
            return sub_menu;
        };


        // Add  Record
        $('#addModal').on('show.bs.modal', function (event) {
            fillDropList();

        });

        // Retrieve all records
        function fillDropList() {
            var options = '';

            ///  departmentsList = null;



            $.ajax({
                type: 'GET',
                processData: false,
                contentType: false,
                dataType: 'json',
                url: 'https://localhost:44304/api/Departments/1',
                beforeSend: function () {
                    // $('#addResponse').html('');
                },
                dataType: 'JSON',
                success: function (data) {
                    if (data != null && data.data.length > 0) {
                        departmentsList = data.data;
                        for (var i = 0; i < departmentsList.length; i++) {
                            options += '<option value="' + departmentsList[i].id + '">' + departmentsList[i].name + '</option>';
                        }
                        $('#parentId').html(options);
                        /// $('#edit_CoourseId').html(options);
                    }

                }, error: function (data) {
                    console.log(data);
                }
            });


            return false;
        }


        // submit new Course to a Student Record
        $('#addForm').on('submit', function (e) {
            e.preventDefault(e);
            //var formData = new FormData($('#addForm')[0]);
            var formData = {
                "name": $('#name').val(),
                "parentId": $('#parentId').val(),

            };
            $.ajax({
                type: "POST",
                // data: formData,
                contentType: 'application/json; charset=utf-8',
                url: "https://localhost:44304/api/Departments",
                headers: {
                    RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                data: JSON.stringify(formData),
                success: function (data) {
                    console.log(data);
                    // if(data.status == 'Cerated ...'){
                    swal({
                        title: 'Done ',
                        text: "Successfuly Added ....",
                        type: 'success',
                        icon: "success",
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK'
                    });
                    $('#addModal').modal('hide');
                    fill_data();
                    // }
                }, error: function (data) {
                    console.log(data);
                    $('#addResponse').html(' <div class="alert alert-danger light" role="alert">' +
                        'Failed' +
                        '</div>');

                }
            });


        });

        // delete student Record
        $('#deleteModal').on('show.bs.modal', function (event) {
            $('#deleteContent').html('');
            if (departmentsList == null)
                fillDropList();

            var selected_nodes = returnList();
            console.log(returnList());
            for (var i = 0; i < selected_nodes.length; i++) {
                var indx = parseInt(selected_nodes[i]);
                console.log(indx);
                var obj = get_obj(indx);
                console.log(obj);
                if (obj != null) {
                    var item = departmentsList[departmentsList.indexOf(obj)];
                    console.log(item);
                    nodes[i] = item.id;
                    $('#deleteContent').append("<div class='form-row'><div class= 'col-md-12 mb-3'><input type='text'   class='form-control' placeholder='' value='" + item.name + "' required='' disabled=''></div></div >");
                    $('#deleteContent').append("<hr>");

                }

            }


            console.log(nodes);
        });

        // edit student Record
        $('#editModal').on('show.bs.modal', function (event) {
            $('#editContent').html('');
            if (departmentsList == null)
                fillDropList();
            var selected_nodes = returnList();
            console.log(selected_nodes);
            // FILL Drop Down list
            var options = '';
            for (var y = 0; y < departmentsList.length; y++) {
                options += '<option value=' + departmentsList[y].id + '>' + departmentsList[y].name + '</option>';
            }
            for (var i = 0; i < selected_nodes.length; i++) {
                var indx = parseInt(selected_nodes[i]);
                var obj = get_obj(indx);
                if (obj != null) {
                    var item = departmentsList[departmentsList.indexOf(obj)];
                    editNodes[i] = item;
                    $('#editContent').append("<div class='form-row'><div class= 'col-md-12 mb-3'><input type='text' id='editRecId" + item.id + "'  class='form-control' placeholder='' value='" + item.id + "' required='' hidden></div></div >");
                    $('#editContent').append("<div class='form-row'><div class= 'col-md-12 mb-3'><input type='text' id='editName" + item.id + "'  class='form-control' placeholder='' value='" + item.name + "' required=''></div></div >");
                    $('#editContent').append("<div class='form-row'><div class= 'col-md-12 mb-3'><select id='editParentId" + item.id + "'  class='form-control editParentId'  required=''>" + options + "</select></div></div >");
                    $('#editContent').append("<hr>");
                    $('#editParentId' + item.id + '').val(item.parentId);
                }

            }
            //  console.log(nodes);
        });

        // submit  Record

        $(document).on('submit', '#editForm', function (e) {
            e.preventDefault(e);
            for (var i = 0; i < nodes.length; i++) {
                var item = editNodes[i];
                console.log('******');

                var formData = {
                    "id": $('#editRecId' + item.id + '').val(),
                    "name": $('#editName' + item.id + '').val(),
                    "parentId": $('#editParentId' + item.id + '').val()
                };

                console.log(formData);

                //  return false;

                $.ajax({
                    type: 'Put',
                    processData: false,
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    headers: {
                        RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    data: JSON.stringify(formData),
                    url: "https://localhost:44304/api/Departments",
                    success: function (data) {
                        console.log(data);
                        // if(data.status == 'Cerated ...'){
                        swal({
                            title: 'Done ',
                            text: "Successfuly Updated ....",
                            type: 'success',
                            icon: "success",
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        });
                        $('#editModal').modal('hide');
                        fill_data();
                        // }
                    }, error: function (data) {
                        console.log(data);
                        $('#addResponse').html(' <div class="alert alert-danger light" role="alert">' +
                            'Failed' +
                            '</div>');

                    }
                });
            }
            return false;
        });


        function get_obj(id) {
            for (var i = 0; i < departmentsList.length; i++) {
                if (departmentsList[i].id == id) {
                    return departmentsList[i];
                }
            }
            return null;
        }


        // submit delete record
        $('#deleteForm').on('submit', function (e) {
            e.preventDefault(e);
            swal({
                title: "Are You Sure ?",
                text: " ",
                type: "error",
                icon: "warning",
                confirmButtonClass: "btn-danger",
                confirmButtonText: "OK",
                cancelButtonText: "Cancel",
                showCancelButton: true
            }).then((willDelete) => {
                ///// return false;
                console.log(nodes);

                var formData = {
                    "ids": nodes

                };
                for (var y = 0; y < nodes.length; y++) {
                    $.ajax({
                        type: 'Delete',
                        processData: false,
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        headers: {
                            RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                        },

                        url: "https://localhost:44304/api/Departments/" + nodes[y],
                        beforeSend: function () {
                            $('#deleteResponse').html('');
                        },
                        success: function (data) {
                            console.log(data);
                            // if(data.status == 'Cerated ...'){
                            swal({
                                title: 'Done',
                                text: "Successfuly deleted",
                                type: 'success',
                                icon: "success",
                                confirmButtonText: 'OK'
                            });
                            $('#deleteModal').modal('hide');
                            $('#deleteContent').html('');
                            fill_data();
                            // }
                        }, error: function (data) {
                            var code = data.status;
                            if (code == 500) {
                                $('#deleteResponse').html(' <div class="alert alert-danger light" role="alert">' +
                                    ' ' +
                                    '</div>');
                            } else if (code == 400) {
                                $('#deleteResponse').html(' <div class="alert alert-danger light" role="alert">' +
                                    'Required Fields' +
                                    '</div>');
                            } else {

                            }
                        }
                    });
                }
            }
            );
            //return false;


        });
        //$(document).on("change",".jstree-clicked", checkButton);
    });

</script>